<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_hex_pattern">

        <TextView
            android:id="@+id/tvSyncBalance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Saldo Síncrono: R$ --,--"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/orange_primary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"/>

        <TextView
            android:id="@+id/tvAsyncBalance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Saldo Assíncrono: R$ --,--"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/yellow_accent"
            app:layout_constraintTop_toBottomOf="@id/tvSyncBalance"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"/>

        <Button
            android:id="@+id/btnSyncAccounts"
            style="@style/OrangeButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Sincronizar Contas"
            app:layout_constraintTop_toBottomOf="@id/tvAsyncBalance"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"/>

        <include
            layout="@layout/include_bottom_nav"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>