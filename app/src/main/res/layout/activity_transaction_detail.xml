<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/tech_gray"
        android:padding="16dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_orange_bg"
            android:padding="24dp"
            android:elevation="4dp">

            <TextView
                android:text="Detalhes da Transação"
                android:textStyle="bold"
                android:textSize="22sp"
                android:textColor="@color/orange_primary"
                android:layout_marginBottom="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <View android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/orange_primary"
                android:layout_marginBottom="16dp"/>

            <TextView android:text="ID:" android:textStyle="bold"
                android:textColor="@color/yellow_accent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView android:id="@+id/tvDetailId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_marginBottom="8dp"/>

            <TextView android:text="Origem:" android:textStyle="bold"
                android:textColor="@color/yellow_accent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView android:id="@+id/tvDetailOrigem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_marginBottom="8dp"/>

            <TextView android:text="Destino:" android:textStyle="bold"
                android:textColor="@color/yellow_accent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView android:id="@+id/tvDetailDestino"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_marginBottom="8dp"/>

            <TextView android:text="Valor:" android:textStyle="bold"
                android:textColor="@color/yellow_accent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView android:id="@+id/tvDetailValor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_marginBottom="8dp"/>

            <TextView android:text="Status:" android:textStyle="bold"
                android:textColor="@color/yellow_accent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView android:id="@+id/tvDetailStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_marginBottom="8dp"/>

            <TextView android:text="Descrição:" android:textStyle="bold"
                android:textColor="@color/yellow_accent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView android:id="@+id/tvDetailDescricao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_marginBottom="8dp"/>

            <TextView android:text="Data de Criação:" android:textStyle="bold"
                android:textColor="@color/yellow_accent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView android:id="@+id/tvDetailDataCriacao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_marginBottom="8dp"/>

            <TextView android:text="Data de Atualização:" android:textStyle="bold"
                android:textColor="@color/yellow_accent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView android:id="@+id/tvDetailDataAtualizacao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_marginBottom="8dp"/>

            <TextView android:text="Tipo de Operação:" android:textStyle="bold"
                android:textColor="@color/yellow_accent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView android:id="@+id/tvDetailTipoOperacao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_marginBottom="8dp"/>

            <TextView android:text="Método de Conexão:" android:textStyle="bold"
                android:textColor="@color/yellow_accent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView android:id="@+id/tvDetailMetodoConexao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_marginBottom="8dp"/>

            <TextView android:text="Gateway de Pagamento:" android:textStyle="bold"
                android:textColor="@color/yellow_accent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView android:id="@+id/tvDetailGateway"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_marginBottom="24dp"/>

            <Button
                android:id="@+id/btnFechar"
                style="@style/OrangeButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fechar"/>
        </LinearLayout>
    </ScrollView>
</layout>