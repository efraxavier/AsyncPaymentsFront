<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_hex_pattern">

        <LinearLayout
            android:id="@+id/profileContainer"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_orange_bg"
            android:padding="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">
                <ImageView
                    android:src="@drawable/ic_person"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:tint="@color/tech_black"/>
                <TextView
                    android:id="@+id/tvProfileEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email: usuario@email.com"
                    android:textColor="@color/dark_gray"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">
                <ImageView
                    android:id="@+id/ivVerifiedUser"

                    android:src="@drawable/ic_verified_user"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:tint="@color/red_accent"/>
                <TextView
                    android:id="@+id/tvProfileStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status da conta: Ativa"
                    android:textColor="@color/red_accent"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">
                <ImageView
                    android:src="@drawable/ic_sync"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:tint="@color/yellow_accent"/>
                <TextView
                    android:id="@+id/tvProfileSync"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Última sincronização: 01/01/2024"
                    android:textColor="@color/yellow_accent"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

            <!-- Campos fictícios -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">
                <ImageView
                    android:src="@drawable/ic_credit_card"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:tint="@color/orange_primary"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cartão: **** 1312"
                    android:textColor="@color/orange_primary"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">
                <ImageView
                    android:src="@drawable/ic_phone"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:tint="@color/dark_gray"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Telefone: (11) 98002-8922"
                    android:textColor="@color/dark_gray"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">
                <ImageView
                    android:src="@drawable/ic_person"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:tint="@color/tech_black"/>
                <TextView
                    android:id="@+id/tvProfileName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nome: João Silva"
                    android:textColor="@color/dark_gray"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">
                <ImageView
                    android:src="@drawable/ic_id_card"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:tint="@color/tech_black"/>
                <TextView
                    android:id="@+id/tvProfileCpf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CPF: 12345678901"
                    android:textColor="@color/dark_gray"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">
                <ImageView
                    android:src="@drawable/ic_phone"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:tint="@color/dark_gray"/>
                <TextView
                    android:id="@+id/tvProfileCelular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Celular: 11999999999"
                    android:textColor="@color/dark_gray"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">
                <ImageView
                    android:src="@drawable/ic_credit_card"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:tint="@color/orange_primary"/>
                <TextView
                    android:id="@+id/tvProfileFormaPagamento"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Forma de Pagamento: CREDITO"
                    android:textColor="@color/orange_primary"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">
                <ImageView
                    android:src="@drawable/ic_admin_panel"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:tint="@color/tech_black"/>
                <TextView
                    android:id="@+id/tvProfileRole"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Perfil: USER"
                    android:textColor="@color/tech_black"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>
        </LinearLayout>

        <include
            layout="@layout/include_bottom_nav"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>