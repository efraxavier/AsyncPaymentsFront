<resources>
    <!-- Text Styles -->
    <style name="OrangeText">
        <item name="android:textColor">@color/orange_primary</item>
    </style>
    <style name="YellowText">
        <item name="android:textColor">@color/yellow_accent</item>
    </style>
    <style name="RedText">
        <item name="android:textColor">@color/red_accent</item>
    </style>

    <!-- Rounded Button -->
    <style name="OrangeButton">
        <item name="android:backgroundTint">@color/orange_primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:elevation">4dp</item>
        <item name="android:background">@drawable/rounded_orange_bg</item>
    </style>
    <style name="YellowButton">
        <item name="android:backgroundTint">@color/yellow_accent</item>
        <item name="android:textColor">@color/tech_black</item>
        <item name="android:elevation">4dp</item>
        <item name="android:background">@drawable/rounded_yellow_bg</item>
    </style>
    <style name="RedButton">
        <item name="android:backgroundTint">@color/red_accent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:elevation">4dp</item>
        <item name="android:background">@drawable/rounded_red_bg</item>
    </style>

    <!-- Rounded EditText -->
    <style name="OrangeEditText">
        <item name="android:background">@drawable/edittext_hex_border</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/orange_primary</item>
    </style>
    <style name="OrangeTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/orange_primary</item>
        <item name="hintTextColor">@color/orange_primary</item>
        <item name="android:textColorHint">@color/orange_primary</item>
        <item name="boxBackgroundColor">@color/tech_black</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>